@import '../componentCss.wxss';

.category-item {
  margin-bottom: 20rpx;
  background: #fff;
}

.three-lines-wraper {
  width: 96%;
  padding: 30rpx 2% 0 2%;
  background: #fff;
  overflow: hidden;
}

.three-lines-advertising {
  width: 100%;
  vertical-align: top;
  /* height: 200rpx; */
}

.three-lines-item {
  width: 28%;
  margin: 0 2% 35rpx 2%;
  float: left;
  position: relative;
  height: 325rpx;
}

.three-lines-item-img {
  width: 210rpx;
  height: 210rpx;
  vertical-align:top;
}
.three-lines-promotion-img {
  width: 80rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.no-goods-count-image {
  position:absolute;
width:126rpx;
height:112rpx;
top:32%;
left:52%;
transform:translate(-50%, -50%);

}

.insert-img {
  height: 325rpx;
  border-radius: 10rpx;
}

.three-lines-item-title {
  width: 100%;
  height: 64rpx;
  line-height: 32rpx;
  /* font-size: 22rpx; */
  font-size: 8.25pt;
  color: #353535;
  text-align: center;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 10rpx 0 10rpx 0;
}

.three-lines-is-new {
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: #63c0f3;
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
}

.three-lines-item-price {
  color: #e60a30;
  /* font-size: 26rpx; */
  font-size: 9.75pt;
  text-align:center;
}

.three-lines-tag {
  position: absolute;
  left: 0;
  top: 172rpx;
  border: 1rpx solid #e60a30;
  color: #e60a30;
  padding: 0px 5px;
  font-size: 20rpx;
  line-height: 32rpx;
  height: 32rpx;
}

.three-lines-item-market-price {
  color: #c9c9c9;
  font-size: 8.25pt;
  text-decoration: line-through;
}
