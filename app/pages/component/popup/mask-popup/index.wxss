.mask-box {
    position: fixed;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    width: 100vw;
    height: 100vh;
    z-index: 10;
    opacity: 1;
}
.mask {
    position: fixed;
    top: 0;
    left: 0;
    background-color: #000000;
    opacity: 0.7;
    width: 100vw;
    height: 100vh;
    z-index: 11;
}