.title{
    height: 130rpx;
    line-height: 130rpx;
    text-align: center;
    font-size: 16px;
    position: relative;
}
.title-icon{
    position: absolute;
    padding: 44rpx;
    top: 0;
    right: 0;
    font-size: 0;
    line-height: 1;
}
.title-icon>image{
    width: 36rpx;
    height: 36rpx;
}
.coupon-list{
    font-size: 0;
    padding: 0 20rpx;
    height: 660rpx;
    overflow-y: auto;
}


.coupon-list image{
    width: 710rpx;
    height: 200rpx;
    position: relative;
    margin-bottom: 20rpx;
}


.coupon-list-content{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    font-size: 24rpx;
    color: #999;
    display: flex;
    align-items: center;
}

.list-l{
    text-align: center;
    width: 240rpx;
}

.yellow .list-l .list-l-price{
    color: #e6a50a;
}
.red .list-l .list-l-price{
    color: #e60a30;
}
.list-l-price>text{
    font-size: 40rpx;
}
.price-size-l{
    font-size: 70rpx;
}
.price-size{
    font-size: 50rpx;
}

.yellow .list-r .list-r-btn{
    background: #e6a50a;
}
.red .list-r .list-r-btn{
    background: #e60a30;
}
.list-r{
    flex: 1;
    height: 100%;
    box-sizing: border-box;
    padding: 30rpx 20rpx 0 30rpx;
}
.list-r-btn{
    position: absolute;
    top: 30rpx;
    right: 20rpx;
    width: 128rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 48rpx;
    color: #fff;
}
.list-r-title{
    font-size: 36rpx;
    color: #353535;
}
.list-r-text{
    position: relative;
    padding: 10rpx 0 10rpx 20rpx;
}
.list-r-text:before{
    content: "";
    position: absolute;
    top: 50%;
    left: 7rpx;
    width: 6rpx;
    height: 6rpx;
    border-radius: 6rpx;
    background: #999;
}


.promotion-content{
    min-height: 460rpx;
}
.content-title{
    display: flex;
    font-size: 24rpx;
    align-items: center;
    height: 100rpx;
    background: #fff;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #f4f4f4;
}
.content-title>text:nth-of-type(1){
    padding: 2rpx 4rpx;
    border: 2rpx solid #ff5555;
    border-radius: 4rpx;
    color: #ff5555;
    flex-shrink: 0;
}
.content-title>text:nth-of-type(2){
    flex: 1;
    padding-left: 20rpx;
}
.content-title>image{
    width: 16rpx;
    height: 26rpx;
}


.promotion-content-list{
    display: flex;
    flex-wrap: wrap;
    font-size: 28rpx;
    padding: 30rpx 0 0 50rpx;
    height: 480rpx;
    box-sizing: border-box;
    overflow-y: auto;
}
.promotion-content-list>view{
    margin-bottom: 30rpx;
}
.promotion-content-good{
    display: flex;
    align-items: center;
    margin: 10rpx 44rpx 0 0;
}
.promotion-content-list image{
    width: 140rpx;
    height: 140rpx;
    border: 2rpx solid #e4e4e4;
    border-radius: 6rpx;
    overflow: hidden;
}
