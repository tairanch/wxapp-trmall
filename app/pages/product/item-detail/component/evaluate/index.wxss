
.evaluate{
    display: flex;
    align-items: center;
    height: 100rpx;
    background: #fff;
    font-size: 28rpx;
    padding: 0 30rpx;
    display: none;
}
.evaluate>image{
    width: 18rpx;
    height: 30rpx;
}

.evaluate>text:nth-of-type(2){
    flex: 1;
    text-align: right;
    color: #e60a30;
    padding-right: 20rpx;
    box-sizing: border-box;
}
.evaluate-lists{
    background: #fff;
    height: 260rpx;
    padding: 0 30rpx 30rpx 0;
}
.evaluate-list{
    display: flex;
    font-size: 24rpx;
    border: 2rpx solid #e4e4e4;
    margin-right: 20rpx;
    box-shadow: 0 0 30rpx 0 #f3f3f3;
}
.evaluate-list-l{
    flex: 1;
    height: 256rpx;
    box-sizing: border-box;
    padding: 20rpx;
}

.imgAName{
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}
.img{
    width: 60rpx;
    height: 60rpx;
    margin-right: 10rpx;
}

.evaluate-content{
    font-size: 24rpx;
    display: -webkit-box;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
}



.evaluate-list-r{
    width: 256rpx;
    height: 256rpx;
    flex-shrink: 0;
}
.img-rate{
    width: 256rpx;
    height: 256rpx;
    position: relative;
}

.img-num {
    font-size: 20rpx;
    width: 56rpx;
    height: 32rpx;
    border-radius: 8px;
    line-height: 32rpx;
    text-align: center;
    background-color: #7b6759;
    opacity: 5;
    position: absolute;
    right: 5px;
    top: 5px;
    color: #fff;
}
.evaluate-list-more{
    width: 260rpx;
    height: 260rpx;
    box-sizing: border-box;
    background: #f4f4f4;
    border: 1px solid #e4e4e4;
    text-align: center;
    box-shadow: 0 0 30rpx 0 #f3f3f3;
    font-size: 24rpx;
    color: #353535;
    position: relative;
}
.evaluate-list-more-c{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%)
}


.evaluate-list-more-text{
   padding-bottom: 36rpx;
    position: relative;
}
.evaluate-list-more-text::after{
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    top: 50rpx;
    height: 1rpx;
    background: #cacaca;
}