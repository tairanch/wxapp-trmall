.barrage-strip {
    position: fixed;
    z-index: 3;
    left: 30rpx;
    top: 50px;
}
.barrage-strip .one-strip {
    opacity: 0;
    transition: opacity 0.5s ease-out;
    height: 56rpx;
    overflow: hidden;
    padding-right: 20rpx;
    border-radius: 28rpx;
    background: rgba(53, 53, 53, 0.7);
    color: #fff;
    font-size: 22rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}
.barrage-strip .one-strip .user-avatar {
    height: 56rpx;
    width: 56rpx;
    border-radius: 28rpx;
    overflow: hidden;
    margin-right: 5rpx;
}
.barrage-strip .one-strip .content {
    display: block;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
}
.barrage-strip .one-strip .strip-icon {
    width: 52rpx;
    text-align: center;
}
.barrage-strip .active {
    transition: opacity 0.5s ease-in;
    opacity: 1;
}
