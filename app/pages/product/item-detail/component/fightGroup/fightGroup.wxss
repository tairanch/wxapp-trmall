.free-postage-tag {
    padding: 0 6rpx;
    line-height: 30rpx;
    height: 30rpx;
    font-size: 20rpx;
    background: #fff;
    color: #e60a30;
    margin: 20rpx 20rpx 10rpx;
    border: solid #e60a30;
    border-radius: 4rpx;
    vertical-align: -4rpx;
}
.icon-forward {
    top: 50%;
    position: absolute;
    -moz-transform: translateY(-50%);
    -webkit-transform: translateY(-50%);
    -o-transform: translateY(-50%);
    right: 24rpx;
}
.icon-forward > .img {
    width: 20rpx;
    vertical-align: middle;
}
