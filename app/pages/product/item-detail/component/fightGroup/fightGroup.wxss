.clearfix:after {
    display: block;
    width: 100%;
    height: 0;
    clear: both;
    content: "";
    visibility: hidden;
}
.fight-group-active{
    background: #ffff;
    margin-top: 20rpx;
}
.fight-group-active .fight-group-top {
    padding: 0 30rpx;
    height: 70rpx;
    line-height: 70rpx;
}
.fight-group-active .fight-group-rules {
    background-color: #ffefef;
    padding: 26rpx 30rpx 30rpx;
    display: block;
    position: relative;
}
.fight-group-active .fight-group-rules .rule-img {
    width: 100%;
}
.fight-group-active .fight-group-rules .direction-right-icon {
    position: absolute;
    top: 26rpx;
    right: 30rpx;
    width: 16rpx;
    height: 32rpx;
}
.fight-group-detail {
    padding: 0 30rpx 6rpx;
    background: #fff;
    border-bottom:1rpx solid #f4f4f4;
}
.fight-group-detail .group-title {
    padding: 18rpx 0;
    line-height: 30rpx;
    font-size: 24rpx;
    color: grey;
}
.fight-group-detail .group-title .img {
    width: 24rpx;
    height: 24rpx;
    margin-right: 10rpx;
    vertical-align: -2rpx;
}
.fight-group-detail .participants {
    padding-top: 12rpx;
    background: #fff;
}
