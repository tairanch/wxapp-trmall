.area-area{
    background: #fff;
    padding: 20rpx 0;
    margin-top: 20rpx;
}



.support{
    padding: 0 30rpx;
}
.support-content{
    background-color: #f8f7f7;
    border-radius: 4rpx;
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 10rpx 8rpx 20rpx;
}
.support-content-list{
    font-size: 24rpx;
    display: flex;
    align-items: center;
    margin-right: 10rpx;
    margin-bottom: 12rpx;
}
.support-content-list>image{
    width: 24rpx;
    height: 24rpx;
    margin-right: 6rpx;
}


.tag-modal-title{
    height: 130rpx;
    line-height: 130rpx;
    text-align: center;
    font-size: 16px;
    position: relative;
}
.title-icon{
    position: absolute;
    padding: 44rpx;
    top: 0;
    right: 0;
    font-size: 0;
    line-height: 1;
}
.title-icon>image{
    width: 36rpx;
    height: 36rpx;
}

.tag-modal-content{
    height: 670rpx;
}
.tag-modal-list{
    padding: 0 30rpx;
    margin-bottom: 30rpx;
}
.tag-modal-list-icon{
    font-size: 28rpx;
    display: flex;
    align-items: center;
}
.tag-modal-list-icon>image{
    width: 24rpx;
    height: 24rpx;
    margin-right: 6rpx;
}
.tag-modal-list-text{
    font-size: 24rpx;
    color: #999;
    line-height: 40rpx;
}



.charge{
    height: 100rpx;
    display: flex;
    align-items: center;
    background: #fff;
    font-size: 28rpx;
    padding: 0 30rpx;
}
.charge>view{
    padding: 0 30rpx;
    flex: 1;
    display: flex;
    align-items: center;
}
.charge>view>text{
    line-height: 1;
    font-size: 20rpx;
    padding: 4rpx 6rpx;
    border: 2rpx solid #e60a30;
    color: #e60a30;
    border-radius: 4rpx;
    margin-left: 10rpx;
}

.area{
    height: 100rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #f4f4f4;
    font-size: 28rpx;
    padding: 0 30rpx;
}
.area>text{
    flex-shrink: 0;
}
.area-content{
    flex: 1;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    overflow: hidden;
}
.area-content>text{
    flex-shrink: 0;
}
.area-content>image{
    width: 22rpx;
    height: 28rpx;
    flex-shrink: 0;
    margin: 0 10rpx;
}
.area-content>view{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    flex: 1;
}
.area>image{
    width: 18rpx;
    height: 27rpx;
}

.list-modal-title{
    height: 130rpx;
    line-height: 130rpx;
    font-size: 16px;
    position: relative;
    padding-left: 30rpx;
}

.list-modal-content{
    height: 640rpx;
}
.area-list{
    display: flex;
    align-items: center;
    font-size: 26rpx;
    padding: 0 30rpx;
    height: 100rpx;
    border-top: 2rpx solid #f4f4f4;
}
.checked{
    color: #e60a30;
}
.area-list>text{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
}
.area-list>image{
    width: 34rpx;
    height: 43rpx;
    flex-shrink: 0;
    margin-right: 30rpx;
}
.last>image{
    width: 34rpx;
    height: 34rpx;
    flex-shrink: 0;
}
area{
    height: 100rpx;
    line-height: 100rpx;
    flex: 1;
}
