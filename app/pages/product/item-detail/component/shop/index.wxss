.shop{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    height: 200rpx;
    padding: 0 30rpx;
    background: #fff;
    border-bottom: 1rpx solid #f4f4f4;
}
.shop-logo{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
}
.shop-name{
    flex: 1;
    color: #999;
    padding-left: 20rpx;
}
.shop-name>view:nth-of-type(1){
    font-size: 30rpx;
    color: #353535;
}
.shop-tag{
    height: 50rpx;
    width: 140rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 50rpx;
    border: 1rpx solid #e60a30;
    color: #e60a30;
}
