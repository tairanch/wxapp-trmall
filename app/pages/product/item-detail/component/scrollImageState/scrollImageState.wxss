.scroll-banner {
    position: relative;
}
.scroll-banner .tag1 {
    position: absolute;
    width: 200rpx;
    top: 0;
    left: 0;
    z-index: 2;
}
.scroll-banner .tag2 {
    position: absolute;
    width: 80rpx;
    top: 10px;
    left: 10px;
    z-index: 2;
}
.scroll-banner .banner-wraper {
    width: 100vw;
    height: 100vw;
    position: relative;
}
.scroll-banner .banner-img,
.scroll-banner .banner-swiper {
    width: 100%;
    height: 100%;
}
.scroll-banner .banner-dots {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 56rpx;
    height: 32rpx;
    border-radius: 32rpx;
    background: rgba(0, 0, 0, 0.2);
    color: #fff;
    text-align: center;
    font-size: 24rpx;
    line-height: 32rpx;
}
