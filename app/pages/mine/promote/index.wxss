
/* 页面容器 */
.page-container {
  background: #f4f4f4;
  width: 100%;
  height: 100vh;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column
}

.verify-bg-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    background-color: #FDF1E1;
    animation-name: fade-in;
    animation-duration: 300ms;
    animation-timing-function: ease-out;
    animation-iteration-count: 1;
}

@keyframes fade-in {

    from {
        height: 0;
    }

    to {
        height: 30px;
    }
}


.verify-text {
    margin-top: 5px;
    margin-bottom: 5px;
    margin-left: 15px;
    font-size: 10pt;
    color: #9D6F47;
}

.verify-btn {
    width: 60px;
    font-size: 10pt;
    color: #E60A30;
}

.image-background {
  width: 100%;
  height: 189px;
}

.page-bg-view {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
}

.position-view {
    position: absolute;
    display: flex;
    flex-direction: column;
    top:0;
    left:0;
    right:0;
}

.header-bg-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 70px;
    padding-left: 20px;
    background-color: rgba(0,0,0,0);
}

.head-image-bg-view {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 42px;
    height: 42px;
    border-radius: 21px;
    background-color: white;
}

.header-image-view {
    width: 40px;
    height: 40px;
    border-radius: 20px;
}

.nick-name-text {
    margin-left: 15px;
    color: white;
    font-size: 14pt;
}

.income-card-view {
    display: flex;
    flex-direction: column;
    margin-top: 15px;
    margin-left: 15px;
    margin-right: 15px;
    height: 110px;
    border-radius: 10px;
    background-color: white;
}

.income-section-view {
    display: flex;
    flex-direction: row;
    justify-content:space-between;
    margin-left: 15px;
    margin-right: 15px;
    height: 40px;
    align-items: center;
}

.income-section-title {
    font-size: 11pt;
    color: #666666;
}

.balance-part-view {
    display: flex;
    flex: 3;
    flex-direction: row;
    align-items: center;
    margin-top: 5px;
    width: 100%;
}

.balance-view {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding-left: 30px;
}

.balance-desc-text {
    font-size: 10pt;
    color: white;
    margin-bottom: -5px;
}

.balance-text {
    font-size: 26pt;
    color: white;
}

.income-desc-text {
    margin-bottom: 5px;
    font-size: 10pt;
    color: #999999;
}

.income-text {
    font-size: 18pt;
    font-weight: bold;
    color: #353535;
}

.cash-out-btn {
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.cash-btn-image {
    margin-top: 28px;
    width: 70px;
    height: 28px;
}

.cash-text-bg {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 30px;
    margin-right: 15px;
    width: 70px;
    height: 28px;
}

.cash-text {
    color: white;
    font-size: 10pt;
}

.bottom-part-view {
    display: flex;
    flex: 1;
    flex-direction: row;
    align-items: center;
    align-content: space-between;
    width: 100%;
}

.total-view {
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
}

.current-month-total-view {
    display: flex;
    flex: 1;
    flex-direction: row;
}

.current-month-total-left-part-view {
    display: flex;
    flex-direction: column;
}

.current-month-total-right-part-view {
    margin-left: 10px;
}

.right-arrow {
    margin-top: 35px;
    width: 7px;
    height: 12px;
}

.total-text {
    font-size: 18pt;
    color: #353535;
}


.model-view {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0,0,0,0.5);
    z-index: 800;
}

.mode-sub-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80%;
    background-color: white;
    border-radius: 8px;
}

.top-close-bg-view {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    width: 100%;
}

.bottom-share-bg {
    position: absolute;
    bottom: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 48px;
    width: 100%;
    background-color: rgba(0,0,0,0);
}

.bottom-share-btn {
    display: flex;
    flex: 1;
    height: 44px;
    justify-content: center;
    align-items: center;
    margin-left: 60rpx;
    margin-right: 60rpx;
    border-radius: 22px;
    background-color: #E73737;
    box-shadow:2px 2px 4px #E72F36;
}

.close-btn {
    margin-top: -10px;
    margin-right: -10px;
}

.close-image {
    width: 30px;
    height: 30px;
}

.model-title {
    margin-top: 0;
    font-size: 14pt;
    color: #E60A30;
}

.model-content {
    text-align: center;
    margin-top: 20px;
    margin-left: 30px;
    margin-right: 30px;
    margin-bottom: 10px;
    line-height: 20px;
    font-size: 11pt;
    color: #353535;
}

.model-btn {
    display: flex;
    justify-content:center;
    align-items: center;
    margin-top: 10px;
    margin-bottom: 20px;
    width: 230px;
    height: 40px;
    background-color: #E60A30;
    border-radius: 20px;
}

.model-btn-title {
    font-size: 12pt;
    color: white;
}

.arrow {
    width: 14rpx;
    height: 24rpx;
    margin-left: 10px;
}

.popular-btn {
    box-sizing: border-box;
    position: fixed;
    bottom: 40rpx;
    width: 630rpx;
    height: 88rpx;
    line-height: 88rpx;
    color: #FFFFFF;
    font-size: 32rpx;
    text-align: center;
    background: linear-gradient(to right, #E73737, #E60A30);
    border-radius: 50rpx;
    box-shadow: 0 10rpx 20rpx 0 rgba(231,47,54, 0.49);
}

.popular-btn .popular-arrow {
    margin-left: 12rpx;
    box-sizing: border-box;
    display: inline-block;
    border-right: 4rpx solid #FFFFFF;
    border-top: 4rpx solid #FFFFFF;
    height: 22rpx;
    width: 22rpx;
    transform-origin: 50% 50%;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    border-left: 4rpx solid transparent;
    border-bottom: 4rpx solid transparent;
}


