/* pages/mine/popularShare/popularShare.wxss */

.trc-guide-wrap {
  position: relative;
}

.trc-guide-img {
  width: 100%;
  vertical-align: top;
}

.trc-guide-close {
  display: inline-block;
  width: 10%;
  height: 100%;
  position: absolute;
  top: 0px;
  left: 0;
}

.trc-guide {
  display: inline-block;
  width: 30%;
  height: 100%;
  position: absolute;
  top: 0px;
  right: 0;
}

.popular {
  background: #f4f4f4;
  width: 100%;
}

.popular .back {
  position: fixed;
  bottom: 56rpx;
  right: 30rpx;
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  color: #FFFFFF;
  background-color: #FFA33D;
  text-align: center;
}

.popular .back .back-text-box {
  position: relative;
  height: 84rpx;
}

.popular .back .back-text {
  text-align: center;
  position: absolute;
  width: 84rpx;
  font-size: 26rpx;
}

.popular .back .back-text:first-child {
  bottom: 40rpx
}

.popular .back .back-text:last-child {
  top: 40rpx
}

.no-data {
  width: 100%;
  height: 100vh;
  text-align: center;
  background: #fff;
}

.no-data-img {
  width: 300rpx;
  margin-top: 290rpx;
}

.no-data-tip {
  color: #666666;
  font-size: 9.75pt;
}

.common-title {
  font-size: 30rpx;
  font-weight: 700;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  text-align: center;
  position: relative;
}

.common-title-text {
  color: #353535;
}

.common-more-wraper {
  display: inline;
  position: absolute;
  right: 30rpx;
}

.common-more {
  float: right;
  color: #666;
}

.common-arrow-right {
  width: 15rpx;
  height: 27rpx;
  float: right;
  margin-left: 6rpx;
  margin-top: 30rpx;
}

.footer {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  text-align: center;
  font-size: 9pt;
  color: #999;
}

