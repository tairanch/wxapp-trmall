/* pages/mine/cashOut/cashOut.wxss */

.page-container {
    display: flex;
    flex-direction: column;
    width: 100vw;
    height: 100vh;
    background-color: #f4f4f4;
}


.tips-bg-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    background-color: #FDF1E1;
}

.tips-text {
    margin-left: 15px;
    margin-top: 5px;
    margin-bottom: 5px;
    font-size: 10pt;
    color: #9D6F47;
}

.cash-out-bg {
    display: flex;
    flex-direction: column;
    background-color: white;
    margin-top: 15px;
    margin-left: 15px;
    width: calc(100% - 30px);
    border-radius: 8px;
}

.card-title-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 64px;
    background-color: #fafafa;
}

.cash-to-view {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.wx-logo {
    margin-right: 5px;
    width: 22px;
    height: 18px;
}

.title-text {
    margin-left: 22px;
    font-size: 11pt;
    color: #353535;
}

.right-title-text {
    margin-right: 22px;
    font-size: 10pt;
    color: #999;
}

.cash-count-title-vuew {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 65px;
    background-color: white;
}

.cash-title {
    margin-left: 22px;
    font-size: 11pt;
    font-weight: bold;
    color: #353535;
}

.cash-input-bg-view {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    padding-left: 22px;
    height: 45px;
}

.input-bg {
    display: flex;
    flex: 1;
    margin-left: 10px;
    margin-right: 10px;
    margin-bottom: -5px;
}

.count-input-view {
    font-size: 32pt;
    height: 45px;
}

.close-icon-bg {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 25px;
    margin-bottom: 5px;
    width: 24px;
    height: 24px;
}

.close-icon {
    width: 16px;
    height: 16px;
}

.get-all-btn-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 22px;
    height: 20px;
}

.get-all-btn-text {
    font-size: 10pt;
    color: #4D7BFE;
}

.bottom-tips-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
    height: 20px;
}

.bottom-btn-bg {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.bottom-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    margin-bottom: 20px;
    width: 80%;
    height: 45px;
    border-radius: 22.5px;
}

.btn-text {
    font-size: 12pt;
    color: white;
}

.line-view {
    margin-top: 10px;
    margin-bottom: 10px;
    margin-left: 22px;
    width: calc(100% - 44px);
    height: 0.5px;
    background-color: #E4E4E4
}
