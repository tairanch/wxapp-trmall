/* pages/mine/verifyOK/verifyOK.wxss */

.page-container {
    display: flex;
    flex-direction: column;
    width: 100vw;
    height: 100vh;
    background-color: white;
}

.logo-title-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 30px;
    margin-top: 30px;
}

.logo-image {
    width: 18px;
    height: 18px;
    border-radius: 9px;
}

.title-text {
    margin-left: 8px;
    font-size: 14pt;
    color: #666666;
}


.big-text-view {
    margin-top: 25px;
    margin-left: 30px;
}

.big-text {
    font-size: 22pt;
    color: #353535;
}



.verify-info-view {
    display: flex;
    flex-direction: column;
    margin-left: 25px;
    margin-right: 25px;
    margin-top: 50px;
    min-width: 280px;
    box-shadow: 0rpx 0rpx 10rpx 5rpx rgba(0,0,0,0.02);
    background-color: white;
}


.cell-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 50px;
    margin-left: 15px;
    margin-right: 15px;
}


.name-text {
    width: 65px;
    font-size: 12pt;
    color: #999999;
}

.info-text {
    margin-left: 25px;
    font-size: 12pt;
    color: #353535;
}