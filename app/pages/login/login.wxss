page {
  background-color: white;
}

.content {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: 20vh auto 0;
}

.section {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  height: 90rpx;
  padding:20rpx 0;
  line-height: 26rpx;
  border-bottom: #e4e4e4 1rpx solid;
  position: relative;
  margin-top:10px;
}

.left {
  width: 18px;
  height: 18px;
  margin-left: 14px;
  margin-right: 14px;
}

.input-grid,.input-grid-mes {
  border:none;
  font-size:12pt;
  height:26rpx;
  width:100%;
}
.input-grid-mes{
  width:60%;
}

.placeholder_class {
  color: #979797;
}

.cancel {
  width: 15px;
  height: 15px;
  margin: 5px 12px 0;
}

.get {
  position: absolute;
  right:0;
  top: 3px;

  width: 90px;
  height: 35px;
  line-height: 35px;
  color: #27a1e5;
  font-size: 12pt;
  text-align: center;
  margin-left: 19px;
  border-left:1px solid #e4e4e4;
}

.get_not {
  position: absolute;
  right:0;
  top: 3px;

  width: 90px;
  height: 35px;
  line-height: 35px;
  color: #27a1e5;
  font-size: 12pt;
  text-align: center;
  margin-left: 19px;
  border-left:1px solid #e4e4e4;
}

.land_button {
  width: 290px;
  height: 50px;
  line-height: 50px;
  background: #e60a30;
  font-size: 18px;
  text-align: center;
  border-radius: 8px;
  color: #fff;
  margin-top: 25px;
  border:1px solid #e60a30;
}

.mongolia {
  display: none;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.mask_content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: white;
  width: 90%;
  border-radius: 10px;
}

.section1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 250px;
  height: 50px;
  border: 1px solid #f6f6f9;
  border-radius: 25px;
  margin-top: 22px;
  background: white;
}

.identify_input1 {
  /* width: 140px; */
  font-size: 15px;
}

.sure_button {
  width: 250px;
  height: 50px;
  line-height: 50px;
  background: #24c43e;
  font-size: 15px;
  text-align: center;
  border-radius: 25px;
  color: #fff;
  margin-top: 40px;
  margin-bottom: 22px;
}

.input-grid-slide {
  margin:20px auto 0;
}

.input-grid-slide input {
    border: 1px solid #cccccc;
    border-radius: 2px;
    padding: 0 10px;
    width: 240px;
    height: 40px;
    font-size: 14px;
}

.not-login-box {
    margin-top: 34rpx;
    text-align: center;
}
.not-login-btn {
    display: inline-blick;
    font-size: 28rpx;
    color: #999;
}