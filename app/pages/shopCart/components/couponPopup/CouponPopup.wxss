/* pages/shopCart/components/couponPopup/CouponPopup.wxss */
.c-fs14{  font-size:14px; }
.c-fs16{  font-size:16px  }
.c-c35{ color:#353535; }
.c-cc9{ color:#c9c9c9; }
.c-fs13{ font-size:13px;  }
.c-tc{  text-align:center;  }
.c-mt10{margin-top:10px;}

.shady {
  z-index:100; 
  opacity:0.5;
  background:#000;
  top:0;
  left:0;
  position:fixed;
  width:100%;
  height:100%;
  box-sizing: border-box;
}
.inline{
  display: inline-block;
}
.popup-coupon {
  position:fixed;
	bottom:0;
	left:0;
	width:100%;
	background:#fff;
	z-index:104;
	font-size:15px;
	padding:0 10px 15px;
	transform: translate3d(0,100%,0);
	transition:all 0.2s ease-in;
   font: 12px/1.5 PingFangSC-Regular,Helvetica Neue,Helvetica,Arial,Hiragino Sans GB,\5FAE\8F6F\96C5\9ED1,tahoma,simsun,sans-serif;
  box-sizing: border-box;
}
.popup-coupon.active{
  transition:all 0.2s ease-out;
	transform: translate3d(0,0,0);
}
.popup-coupon .header{
  padding:20rpx 0 40rpx;
	line-height:80rpx;
	font-size: 32rpx;
	color:#353535;
	text-align:center;
}
.popup-coupon .header .icon-grid{
  position: absolute;
	padding:30rpx;
	top:0;
	right:0;
	line-height:0;
}
.popup-coupon .header .icon-grid .close-img{
  width: 36rpx;
  height: 36rpx;
}
.popup-coupon .body{
  height: 600rpx;
}
.popup-coupon .body .one-coupon-box{
  position: relative;
  margin-bottom: 20rpx;
  height:200rpx;
  width: 100%;
}
.one-coupon{
  position:absolute;
  top: 0;
  height: 100%;
  width: 100%;
	color:#999;
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  overflow: hidden;
}
.popup-coupon .body .one-coupon .coupon-left{
  width:31.5%;
	text-align:center;
	padding-top:44rpx;
}
.popup-coupon .body .one-coupon .coupon-left .left-one{
  font-size:30rpx;
}
.popup-coupon .body .one-coupon .coupon-left .left-one .b{
	font-size: 75rpx;
	line-height: 92rpx;
}
.popup-coupon .body .one-coupon .coupon-left .left-two{
  color:#999;
	font-size: 24rpx;
}
.popup-coupon .body .coupon-red .left-one{
  color:#e60a30;
}
.popup-coupon .body .one-coupon .coupon-left-image{
  position: absolute;
  left: 0;
  width: 10rpx;
  height: 200rpx;
  
}
.popup-coupon .body .one-coupon .coupon-quan-image{
  position: absolute;
  right: 0;
  top: 84rpx;
  width: 132rpx;
  height: 130rpx;
}
.popup-coupon .body .one-coupon .coupon-right{
  display:block;
	-webkit-box-flex:1;
	-ms-flex:1;
	flex:1;
	position:relative;
	padding: 40rpx  0 30rpx 20rpx;
}
.coupon-right .receive-btn{
  color:#fff;
	border-radius:20rpx;
	padding:0 10rpx;
}
.coupon-right .receive-btn, .coupon-right .use-btn{
  position:absolute;
	right:20rpx;
	top:40rpx;
	height:40rpx;
	line-height:40rpx;
	font-size:22rpx;
  display: block;
	padding-right:6rpx;
}
.popup-coupon .body .coupon-red left-one{
  color:#e60a30;
}
.popup-coupon .body .coupon-red .coupon-right .receive-btn{
  background:#e60a30;
}
.popup-coupon .body .coupon-red .coupon-right .use-btn{
  color:#e60a30;
}
.popup-coupon .body .coupon-yellow .left-one{
  color:#e6a50a;
}
.popup-coupon .body .coupon-yellow .coupon-right .receive-btn{
  background:#e6a50a;
}
.popup-coupon .body .coupon-yellow .coupon-right .use-btn{
  color:#e6a50a;
}
.popup-coupon .body .coupon-right .right-one{
  height:48rpx;
	line-height:48rpx;
	overflow:hidden;
  font-size:24rpx;
  margin-right:140rpx;
  word-break: break-all;
}
.popup-coupon .body .coupon-right .right-two{
	font-size:24rpx;
	line-height:32rpx;
  height:32rpx;
	display:-webkit-box;
	word-break: break-all;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp:1;
	-webkit-box-orient:vertical;
	margin:10rpx;
}
	
.popup-coupon .body .coupon-right .right-three{
	font-size:10px;
}
.no-coupon{
  padding: 60rpx 0 100rpx
}