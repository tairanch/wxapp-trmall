/* pages/shopCart/components/saleAttr/component/AttrItem.wxss */
.sale-parameter{
  overflow: hidden;
  margin-bottom: 15px;
  font: 12px/1.5 PingFangSC-Regular,Helvetica Neue,Helvetica,Arial,Hiragino Sans GB,\5FAE\8F6F\96C5\9ED1,tahoma,simsun,sans-serif;
  box-sizing: border-box;
}
.sale-parameter .sale-name{
  color: #353535;
  font-size: 28rpx;
}
.sale-parameter .sale-size-ul{
  overflow: hidden;
}
.sale-parameter .sale-size-ul .li{
  line-height: 60rpx;
  display: block;
  float: left;
  height: 60rpx;
  margin-right: 4%;
  padding: 0 10px;
  border-radius: 3px;
  background: #fff;
  margin-top: 10px;
  min-width: 75px;
  max-width: 100%;
  border: 1px solid #f0f0f0;
  text-align: center;
}
.sale-parameter .sale-size-ul .li .attr-image{
  width: 25px;
  height: 25px;
  margin-right: 3px;
  vertical-align: middle;
}
.sale-parameter .sale-size-ul .li .attr-image-text{
  display: inline-block;
  vertical-align: middle;
}
.sale-parameter .sale-size-ul .li.on{
  color: #e60a30;
  border: 1px solid #e60a30;
  border-radius: 30rpx;
}
.sale-parameter .sale-size-ul .li.on .span{
  color: #e60a30;
}
.sale-parameter .sale-size-ul .li.no{
  border: 1px dashed #e4e4e4;
  color: #c9c9c9;
}