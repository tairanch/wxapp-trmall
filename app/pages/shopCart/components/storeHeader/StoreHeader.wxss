/* pages/shopCart/components/storeHeader/StoreHeader.wxss */
.store-header{
  height: 40px;
  border-bottom: 1px solid #f4f4f4;
  line-height: 39px;
  font-size: 13px;
  display: flex;
  text-align: center;
  box-sizing: border-box;
}

.store-header .checkbox {
    width: 45px;
}

.store-header .store-name {
    display: flex;
    flex: 1;
		overflow:hidden;
		text-align:left;
		line-height:43px;
		margin-right:30px;
		word-break: break-all;
}

.store-name-text {
  display:-webkit-box;
	word-break: break-all;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp:1;
	-webkit-box-orient:vertical;
}

.store-name-text .image-biz {
  vertical-align: -4px;
  width: 15px;
  height: 17px;
}

.store-name-text .image-default {
  vertical-align: -3px;
  width: 16px;
  height: 15px;
}

.store-name-text .image-good {
  vertical-align: -4px;
  width: 17px;
  height: 17px;
}

.store-name-text .image-self {
  vertical-align: -4px;
  width: 20px;
  height: 20px;
}

.store-header .open-icon{
  margin-right: 8px;
}
.open-icon .arrow-right-icon{
  margin-left:8px;
	vertical-align:-1px;
  display:inline-block;
	width:7px;
	height:12px;
}

.store-header .store-edit {
  padding-right:5px;
}

.store-edit .text {
  display: inline-block;
	width: 40px;
	height: 16px;
	line-height: 18px;
	vertical-align: middle;
}

.store-edit .one {
  color:#ff5555;  
}

.store-edit .two {
  border-left: 1px solid #d9d9d9;
}