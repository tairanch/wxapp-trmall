/* pages/shopCart/components/invalidItem/InvalidItem.wxss */
.invalid-item {
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  font: 12px/1.5 PingFangSC-Regular,Helvetica Neue,Helvetica,Arial,Hiragino Sans GB,\5FAE\8F6F\96C5\9ED1,tahoma,simsun,sans-serif;
  box-sizing: border-box;
}
.invalid-item .checkbox {
	width: 40px;
	text-align: center;
	padding-left:10px;
	line-height: 90px;
}
.invalid-item .item-info {
  padding:10px 15px 20px 5px;
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
	-webkit-box-flex:1;
	-ms-flex:1;
	flex:1;
}
.item-info .item-img {
  width: 70px;
	display: block;
	position: relative;
}
.item-info .item-img .img-iamge {
  width: 70px;
  height: 70px;
}
.item-info .item-detail{
  padding-left:10px;
	display:block;
	-webkit-box-flex:1;
	-ms-flex:1;
	flex:1;	
}
.item-info .item-detail .title{
  line-height: 17px;
	height:34px;
	color:#999;
	margin-bottom: 3px;
  display:-webkit-box;
	word-break: break-all;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp:2;
	-webkit-box-orient:vertical;
}
.item-info .item-ctrl{
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  -webkit-box-align: flex-end;
	-ms-flex-align: flex-end;
	align-items: flex-end;
}
.item-info .item-ctrl .text{
  display:block;
	-webkit-box-flex:1;
	-ms-flex:1;
	flex:1;
}
.item-info .item-ctrl .text-detail{
  display: block;
	height:16px;
	line-height:20px;
  display:-webkit-box;
	word-break: break-all;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp:1;
	-webkit-box-orient:vertical;
}
.item-info .item-ctrl .delete{
  padding-bottom:1px;
}
.item-info .item-ctrl .delete-image{
  width:18px;
	height:20px;
}
.item-info .item-ctrl .collect{
  height:25px;
	border:1px solid #bababa;
	line-height:23px;
	padding:0 10px;
	border-radius:3px;
}

.ctrl-btn{
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  height:100%;
  width: 100%;
  color:#fff;
	font-size:13px;
	text-align:center;
}
.ctrl-btn .text-wrap{
  width: 115rpx;
}
.ctrl-btn .delete{
  background:#e83a3a;
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  -webkit-box-flex:1;
	-ms-flex:1;
	flex:1;
  -webkit-box-align: center;
	-ms-flex-align: center;
	align-items: center;
}