/* pages/shopCart/components/oneItem/OneItem.wxss */
/* common */
.c-vh{visibility:hidden;}
.c-mr3{margin-right:3px;}

.one-item {
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  margin: 0;
  color: #353535;
  -webkit-overflow-scrolling: touch;
  font: 12px/1.5 PingFangSC-Regular,Helvetica Neue,Helvetica,Arial,Hiragino Sans GB,\5FAE\8F6F\96C5\9ED1,tahoma,simsun,sans-serif;
  box-sizing: border-box;
}
/* checkbox布局 */
.one-item .checkbox {
	width: 44px;
	text-align: center;
	line-height: 90px;		
}
.one-item .checkbox span {
	vertical-align: middle;
}
.one-item .seckill-chackbox {
  width: 40px;
	margin-right: 5px;
}
.one-item .item-info {
  padding:10px 0;
	-webkit-box-flex:1;
	-ms-flex:1;
	flex:1;
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
}
.one-item .item-img {
  width: 70px;
}
.one-item .item-img .img-click {
  display: block;
	position: relative;
}
.img-click-iamge {
  width: 70px;
  height: 70px;
}
.one-item .item-img .img-no-item {
  position: absolute;
	width: 55px;
	height: 55px;
	left: 50%;
	top: 50%;
	transform: translate3d(-50%, -50%, 0);
}
.item-img .num-info {
  text-align: center;
	color: #f88;
	line-height: 18px;
	font-size: 12px;
}
.item-img .num-info .p:first-child {
  padding-top:6px;
}
.item-img .num-info .p:last-child {
  padding-bottom:6px;
}
.one-item .item-detail {
  display:block;
	-webkit-box-flex:1;
	-ms-flex:1;
	flex:1;
  padding:0 10px;
}
.item-detail .item-ctrl {
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  margin-bottom:7px;
}
.item-detail .red-label {
  display: inline-block;
  height: 15px;
	font-size: 10px; 
	padding: 0 3px;
	border-radius: 3px;
	border: 1px solid #e60a30;
	vertical-align: middle;
	color: #e60a30;
}
.item-detail .delete-btn {
  text-align:right;
	line-height:35px;
  margin-left: 150rpx;
  width:18px;
  height:20px;
	-webkit-box-flex:1;
	-ms-flex:1;
	flex:1;
}
.item-detail .title{
  line-height: 16px;
	height:32px;
	margin-bottom: 2px;
	padding-top: 1px;
  display:-webkit-box;
	word-break: break-all;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp:2;
	-webkit-box-orient:vertical;
}
.item-detail .props {
  color: #999999;
	line-height: 16px;
	min-height:18px;
	font-size: 11px;
	margin-bottom: 3px;
	display: inline-block;
}
.item-detail .props.props-click{
	position: relative;
	background-color: #f4f4f4;
	padding: 5px 20px 5px 5px;
}
.item-detail .reduce, .item-detail .activity, .item-detail .tax{
	display:-webkit-box;
	word-break: break-all;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp:1;
	-webkit-box-orient:vertical;
	color: #ff8888;
	line-height: 20px;
}
.item-detail .props-text {
  display:-webkit-box;
	word-break: break-all;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp:2;
	-webkit-box-orient:vertical;
}
.item-detail .props-icon{
  width: 12px;
  height: 7px;
  position: absolute;
	bottom: 50%;
	transform: translateY(50%);
	right: 5px;
}
.item-detail .numprice {
  overflow: hidden;
	line-height: 15px;
	font-size: 14px;
}
.item-detail .numprice-top {
  margin-top: 19px;
}
.item-detail .numprice .span{
  vertical-align: bottom;
}
.item-detail .numprice .price{
  float: left;
	color: #e60a30;
}
.item-detail .numprice .num{
  float: right;
	color: #999;
}
.item-detail .item-bottom{
  height: 4px;
}
.ctrl-btn{
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  height:100%;
  width: 100%;
  color:#fff;
	font-size:13px;
	text-align:center;
}
.ctrl-btn .collect{
  background:#fbb810;
  width: 115rpx;
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  -webkit-box-align: center;
	-ms-flex-align: center;
	align-items: center;
}
.ctrl-btn .text-wrap{
  width: 115rpx;
}
.ctrl-btn .delete{
  background:#e83a3a;
  width: 115rpx;
  display:-webkit-box;
	display:-ms-flexbox;
	display:flex;
  -webkit-box-align: center;
	-ms-flex-align: center;
	align-items: center;
}