/**index.wxss**/

.group-count {
  width: 100%;
  min-height: 100%;
  /* overflow-y: scroll; */
  display: none
}

.scroll-view-fixed {
  width: 100%;
  height: 110rpx;
  /* white-space: nowrap; */
  /* background-color: #ff5555; */
  position:fixed;
  z-index:1;
  top: 0;
  bottom:0;
  overflow-x:scroll;
  background-color: #ff5555;
}
.scroll-view-fixed-scroll{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  white-space: nowrap;
}

.scroll-view-fixed-scroll .image_selected, .scroll-view-fixed-scroll .image_normal {
  width: 151rpx;
  height: 100%;
  color: white;
  font-size: 8pt;
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-img {
  width: 20px;
  height: 20px;
}

.image_selected {
  background-color: #e60a30;
}

.image_normal {
  background-color: #ff5555;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.tab-content{
  margin-top: 110rpx;
  background-color: #F4F4F4;
  min-height: calc(100vh - 110rpx);
}
.scroll-view{
  height: 100%;
  width: 100%;
  overflow: auto;
  /* height: 129rpx; */
  white-space: nowrap;
}

.list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: #F4F4F4;
  box-sizing: border-box;
}

.item {
  width: 50%;
  background: white;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  font-size: 14px;
  box-sizing: border-box;
  /* border-bottom: 10rpx solid #eceff2; */
  border-left: 12rpx solid #eceff2;
  border-right: 12rpx solid #eceff2;
  border-top: 12rpx solid #eceff2;
  overflow: hidden;
  position: relative;
  padding: 18rpx;
}
.item:nth-child(2n){
  border-left: 6rpx solid #eceff2;
}
.item:nth-child(2n + 1){
  border-right: 6rpx solid #eceff2;
}

.groupPerson{
  position: absolute;
  left: 18rpx;
  top: 18rpx;
  width: 90rpx;
  height: 36rpx;
  /* padding-left: 20rpx; */
  background-color: #ff5555;
  color: white;
  font-size: 8pt;
  border-radius:0 20px 20px 0;
  line-height:36rpx;
  text-align:center;
}

.photo {
  width: 100%;
  margin: 0;
  height: 357rpx;
  opacity: 0;
  transition: opacity ease-in 0.3s;
}
.active{
    opacity: 1;
}

.play {
  width: 46rpx;
  height: 46rpx;
  top: 290rpx;
  left: 20rpx;
  position: absolute;
}

.title {
  margin-top: 8px;
  font-size: 9pt;
  color: #000;
  height: 34px;
  line-height: 16px;
  word-break: break-all;
  white-space:pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-indent:4px;
}

.detail {
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-right: 20px;
  margin-left: 5px;
  margin-bottom: 10px;
  height:50rpx;
}

.colum {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  text-align: center;
  /* height: 35px; */
  font-size: 9px;
  color: #2a2a2a;
  position: relative;
}

.price {
  color: #e60a30;
  font-size: 16px;
  margin-right: 10rpx;
  font-weight:900;
  line-height:1;
}
.smallprice{
  font-size: 12px;
  font-weight:600;
}

.old_price {
  color: #999;
  font-size: 11px;
  text-decoration: line-through;
  line-height:1;
}


.bottom-btn{
  /* width:50%; */
  width:160px;
  height: 38px;
  /* border: 1px solid #666; */
  border-radius: 4px;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 12px auto;
  color: #3b3b3b;
  font-size: 10pt;
  justify-content:center;
}

.marginbottom{
  padding-bottom: 10px; 
}

.hid-beginbtn{
  display: none;
}
.arrow {
  width: 5px;
  height: 12px;
  margin-left: 10px;
}

.withnodata{
  text-align: center;
  height:92vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: center;
  background-color: #fff;
  color:#666666;
  font-size:9.75pt;
}
.scan-continue{
  height: 100rpx;
  line-height: 100rpx
}
.withnodata image{
  width:300rpx;
}
.page-loading image{
  width:150rpx;
}

.bottom-loadmore{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 20px 0;
  font-size:10pt;
  color:#999;
}

.loadmore-img{
  width:40rpx;
  height:40rpx;
  margin-right:16rpx;
}